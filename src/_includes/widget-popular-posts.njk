<article class="widget popular-posts">
  <h3>Популярные статьи</h3>
  <div class="main">
    <ul class="wpp-list">
      {% for post in popularPosts %}
        <li>
          <a href="{{post.url}}" title="{{post.title}}" target="_self">
            <img src="{{post.url}}/images/{{post.image}}" class="wpp-thumbnail wpp_featured_stock wp-post-image" alt="" loading="lazy" width="100" height="100">
          </a>
          <a href="{{post.url}}" title="{{post.title}}" class="wpp-post-title" target="_self">{{post.title}}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</article>
