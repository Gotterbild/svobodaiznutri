<meta name="description" content="{{description or metadata.description}}">
<link rel="canonical" href="{{metadata.website_url}}{{page.url}}" />
{# <link rel="next" href="https://svobodaiznutri.ru/page/2/" /> #}

<meta property="og:site_name" content="{{metadata.title}}" />
<meta property="og:type" content="article" />
<meta property="og:title" content="{{metadata.title}}" />
<meta property="og:description" content="{{description or metadata.description}}" />
<meta property="og:url" content="{{metadata.website_url}}" />
<meta property="og:image" content="{{metadata.website_url}}{% if coverImage %}{{'/images/'+coverImage | url}}{% else %}{{'/images/default.png' | url}}{% endif %}" />
<meta property="og:image:secure_url" content="{{metadata.website_url}}{% if coverImage %}{{'/images/'+coverImage | url}}{% else %}{{'/images/default.png' | url}}{% endif %}" />

{% set keywordsFinal = keywords or metadata.keywords%}
<meta name="keywords" content="{{keywordsFinal | join(',')}}" />
{% for item in keywordsFinal -%}
	<meta property="article:tag" content="{{item}}" />
{% endfor %}

<meta property="article:published_time" content="2018-10-23T05:40:51Z" />
<meta property="article:modified_time" content="2020-08-26T04:56:23Z" />

<meta property="twitter:card" content="summary" />
<meta property="twitter:domain" content="{{metadata.domain}}" />
<meta property="twitter:title" content="{{metadata.title}}" />
<meta property="twitter:description" content="{{description or metadata.description}}" />
<meta property="twitter:image" content="{{metadata.website_url}}{% if coverImage %}{{'/images/'+coverImage | url}}{% else %}{{'/images/default.png' | url}}{% endif %}" />
